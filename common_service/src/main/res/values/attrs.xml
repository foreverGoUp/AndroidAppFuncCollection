<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:ns1="http://schemas.android.com/tools">
    <declare-styleable name="CsmRadarView">
        <attr name="textColor" format="color" />
        <attr name="pressTextColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="scoreLineColor" format="color" />
        <attr name="radarLineColor" format="color" />
        <attr name="defaultScore" format="integer" />
    </declare-styleable>

    <declare-styleable name="CsmSpiderWebView">
        <attr name="textColor1" format="color" />
        <attr name="pressTextColor1" format="color" />
        <attr name="textSize1" format="dimension" />
        <attr name="scoreLineColor1" format="color" />
        <attr name="radarLineColor1" format="color" />
        <attr name="defaultScore1" format="integer" />
    </declare-styleable>

    <declare-styleable name="GradientColorTextView">
        <attr name="startColor" format="color|reference" />
        <attr name="endColor" format="color|reference" />
    </declare-styleable>

    <declare-styleable name="SquareVerifyCodeView">
        <!--方框数量-->
        <attr format="integer" name="svcv_square_number" />
        <!--方框宽度-->
        <attr format="dimension|reference" name="svcv_square_width" />
        <!--方框间隔-->
        <attr format="dimension|reference" name="svcv_square_interval" />
        <!--方框背景在选中状态的资源-->
        <attr format="reference" name="svcv_square_selected_bg" />
        <!--方框背景在未选中状态的资源-->
        <attr format="reference" name="svcv_square_unselected_bg" />
        <!--文本大小-->
        <attr name="android:textSize" ns1:ignore="ResourceName" />
        <!--文本颜色-->
        <attr name="android:textColor" ns1:ignore="ResourceName" />
        <!--文本样式-->
        <attr name="android:textStyle" ns1:ignore="ResourceName" />
    </declare-styleable>
</resources>